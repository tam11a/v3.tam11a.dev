<section
  id="loading"
  class="fixed top-0 left-0 bg-background flex-row items-center hidden justify-center w-screen h-screen z-50"
>
  <svg
    class="pointer-events-none fixed isolate -z-50 opacity-70 top-0 mix-blend-soft-light"
    width="100%"
    height="100%"
    ><filter id="noise"
      ><feTurbulence
        type="fractalNoise"
        baseFrequency="0.80"
        numOctaves="4"
        stitchTiles="stitch"></feTurbulence></filter
    ><rect width="100%" height="100%" filter="url(#noise)"></rect></svg
  >
  <div>Loading...</div>
</section>

<script is:inline>
  document.addEventListener("astro:before-preparation", () => {
    document.querySelector("#loading").classList.toggle("hidden");
    document.querySelector("#loading").classList.toggle("flex");
  });
  document.addEventListener("astro:after-preparation", () => {
    document.querySelector("#loading").classList.toggle("hidden");
    document.querySelector("#loading").classList.toggle("flex");
  });
</script>
